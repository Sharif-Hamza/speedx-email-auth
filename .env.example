# Server Configuration
PORT=3000
NODE_ENV=production

# Supabase Configuration
# Get these from: https://app.supabase.com/project/<your-project>/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# AWS SES Configuration
# Create IAM user with SES send permissions
# Get credentials from: https://console.aws.amazon.com/iam/
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=your-secret-access-key
SES_SOURCE_EMAIL=support@speed-x.us

# Application URLs
FRONTEND_CONFIRM_REDIRECT=https://speed-x.us/waitlist
IOS_CONFIRM_REDIRECT=speedx://confirm
API_BASE_URL=https://your-railway-app.railway.app

# Security
JWT_SIGNING_SECRET=generate-a-long-random-secret-here-min-32-chars
TOKEN_EXPIRATION_HOURS=48

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=5

# CORS
ALLOWED_ORIGINS=https://speed-x.us,https://admin.speed-x.us,speedx://
